@model IEnumerable<AndEticaretCoreModel.Entity.Basket>

<table class="table">
    <tr>
        <th>
            Ürün
        </th>
        <th>
            Adet
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Sil", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
<a href="/SiparisVer" class="btn btn-primary"><i class="far fa-credit-card"></i> Satın Al</a>