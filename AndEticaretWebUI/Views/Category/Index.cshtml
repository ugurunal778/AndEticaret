@model  List<AndEticaretCoreModel.Entity.Product>
@{
    ViewBag.Title = "Index";
    var category = (AndEticaretCoreModel.Entity.Category)ViewBag.category;
}

<h3>@category.Name Kategorisindeki Ürünler</h3>
@{
    foreach (var item in Model)
    {
        <div class="productBox">
            <p class="title">@item.Name </p>
            <img src="@item.ImageUrl" />
            <p>
                @item.Brand
            </p>
            <p>
                @item.Description
            </p>
            <p>
                @item.Price.ToString("##,## ₺")
            </p>
            <a href="/urun/@item.Name.Replace(" ","-")/@item.Id" class="btn btn-success">İncele</a>
            <a href="#" class="btn btn-default"><i class="fas fa-shopping-basket"></i>Sepet</a>
        </div>
    }
}
<style>
    .productBox {
        width: 200px;
        float: left;
        margin: 10px;
        border: 2px solid #808080;
        padding: 10px;
    }

        .productBox img {
            width: 100%;
        }

        .productBox title {
            font-weight: bold;
            text-align: center;
        }

        .productBox p {
            text-align: center;
        }
</style>