
@{
    ViewBag.Title = "Login";
}
<style>
    .left {
        width: 120px;
        margin: 5px;
        float: left;
    }

    .right {
        width: 120px;
        margin: 5px;
        float: left;
    }
</style>
<h2>Üye Giriş Sayfası</h2>
<br />
@{
    if (ViewBag.Error!=null)
    {
        <div class="alert alert-danger" >
            @ViewBag.Error
        </div>
    }
}
<form action="/Uye-Giris" method="post">
    <div class="left">
        @Html.Label("E-Posta Adresiniz: ")
    </div>
    <div class="right">
        @Html.TextBox("EMail")
    </div>
    <div class="row"></div>
    <div class="left">
        @Html.Label("Şifreniz: ")
    </div>
    <div class="right">
        @Html.Password("Password")
    </div>
    <div class="row"></div>
    <button type="submit">Giriş Yap</button>
</form>